{
  "name": "@ecommerce/backend-core",
  "version": "1.0.0",
  "description": "Multi-tenant backend core for e-commerce applications",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec 'node --loader ts-node/esm' src/server.ts",
    "dev:backend": "nodemon --exec 'node --loader ts-node/esm' src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node --loader ts-node/esm src/database/migrate.ts",
    "seed": "node --loader ts-node/esm src/database/seed.ts"
  },
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "mongoose": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.21.0"
  }
}